###########
# PROJECT #
###########

export PROJECT=drone-system
export DEPLOYMENT_REGION=eu-central-1 # $AWS_REGION when using aws-vault's profile


#######################
# Greengrass Core Dev #
#######################

export uuid=$(cat /proc/sys/kernel/random/uuid)
export GREENGRASS_CORE_PROVISION=true
export GREENGRASS_CORE_THING_NAME=DevCore-$uuid
export GREENGRASS_SESSION_NAME=AssumedSession-$uuid
export GREENGRASS_PROVISION_ROLE=GreengrassV2TokenExchangeRole
export GREENGRASS_PROVISION_ROLE_ALIAS=GreengrassCoreTokenExchangeRoleAlias


#############
# Terraform #
#############

export TF_VAR_projectname=$PROJECT
export TF_VAR_aws_region=$DEPLOYMENT_REGION
# Lookup 'force_destroy' at https://registry.terraform.io/modules/terraform-aws-modules/iam/aws/latest/submodules/iam-user?tab=inputs
export TF_VAR_aws_greengrass_user_force_destroy=true
export TF_VAR_greengrass_v2_token_exchange_role_name=$GREENGRASS_PROVISION_ROLE

